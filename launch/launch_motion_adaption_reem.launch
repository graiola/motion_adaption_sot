<launch> 
	
	<!-- set the python path -->
	<env name="PYTHONPATH" value="$(env PYTHONPATH):$(find motion_adaption_sot)/python_code" />

  <!-- load parameters onto the parameter server -->
  <rosparam command="load" file="$(find motion_adaption_sot)/config/motion_adaption_reem.yaml" />
  
  <!-- launch openni tracker -->
  <node pkg="openni_tracker" type="openni_tracker" name="openni_tracker" />
  
  <!-- start reem simulation and the sot controller (In Gazebo) -->
  <include file="$(find reem_gazebo)/launch/reem_upper_body_no_controllers.launch" />
  <include file="$(find reem_controller_configuration_gazebo)/launch/reem_sot_controllers.launch" />

  <!-- start rviz -->
  <node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find motion_adaption_sot)/rviz_config_reem_teleop.vcg" />
  
  <!-- start the pose filters -->
  <include file="$(find motion_adaption_sot)/launch/pose_filters.launch" ns="motion_adaption_sot">
    <arg name="ref_frame" value="base_link"/>
  </include>

  <!-- start motion adaption node -->
  <node pkg="motion_adaption_sot" type="motion_adaption_sot" name="motion_adaption_sot"/>
  
  <!-- start a simple demo -->
  <node name="run_command" pkg="dynamic_graph_bridge" type="run_command" ns="sot_controller" args="$(find motion_adaption_sot)/python_code/launch_reem_demo.py" output="screen"/>
  
</launch>
